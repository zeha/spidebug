		/>
		<view
		class="com.microchip.android.BasicAccessoryDemo_API12.LEDControl"
		android:id="@+id/led_3"
		android:layout_height="wrap_content" 
		android:src="@drawable/led_off"
		android:background="@null" 
		android:layout_width="wrap_content"	
		/>
		<view
		class="com.microchip.android.BasicAccessoryDemo_API12.LEDControl"
