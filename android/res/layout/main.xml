    <!-- Title bar for potentiometer -->
	
    <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background='@color/title_bar'
    >
		<TextView  
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="@string/pot_header"
	    android:id="@+id/text_view"
	    />
    </LinearLayout>
    
    <!-- Creating progress bar for potentiometer -->
    <ProgressBar
    android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:id="@+id/progress_bar"
	android:progress="0"
	android:max="100"
	style="?android:attr/progressBarStyleHorizontal"
    />
    
    <!-- Microchip Logo and link.  MUST BE LAST!!  This item fills the remaining of the vertical space -->
    
    <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal|bottom"
    >
        
	    <ImageView
	    android:layout_width="wrap_content"
	  	android:layout_height="wrap_content"
	  	android:maxWidth="200px"
	  	android:adjustViewBounds="true"
	    android:src="@drawable/microchip_logo_horizontal"
	    />
	    <TextView  
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="@string/weblink"
	    android:gravity="center"
	    />
    </LinearLayout>
</LinearLayout>
